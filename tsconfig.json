// admin-login.jsx
import { useState } from 'react';
import { useRouter } from 'next/router';

export default function AdminLogin() {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const router = useRouter();

  const handleLogin = () => {
    if (email === 'admin@example.com' && password === 'yourpassword') {
      localStorage.setItem('isAdmin', 'true');
      router.push('/admin/dashboard');
    } else {
      alert('بيانات الدخول خاطئة');
    }
  };

  return (
    <div className="p-6 max-w-sm mx-auto mt-10 bg-white shadow-md rounded-xl">
      <h2 className="text-xl font-bold mb-4 text-center">تسجيل دخول الأدمن</h2>
      <input type="email" placeholder="البريد الإلكتروني" value={email}
        onChange={(e) => setEmail(e.target.value)}
        className="w-full mb-2 p-2 border rounded" />
      <input type="password" placeholder="كلمة المرور" value={password}
        onChange={(e) => setPassword(e.target.value)}
        className="w-full mb-4 p-2 border rounded" />
      <button onClick={handleLogin} className="bg-blue-600 text-white p-2 rounded w-full">دخول</button>
    </div>
  );
}
